<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%style{%d{yyyy-MM-dd HH:mm:ss.SSS}}{yellow} %highlight{%-5p}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} [%c{5.}]] %style{(%t)}{blue} %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
